<Window x:Class="ExpenceTracker.Views.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Ataskaitos" Height="520" Width="800" WindowStartupLocation="CenterOwner">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Ataskaitos:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <TextBlock x:Name="SummaryTextBlock" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <oxy:PlotView x:Name="CategoryPlot" Grid.Column="0" />

            <oxy:PlotView x:Name="MonthlyPlot" Grid.Column="1" />
        </Grid>
    </Grid>
</Window>